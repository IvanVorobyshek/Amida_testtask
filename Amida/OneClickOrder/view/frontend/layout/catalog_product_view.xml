<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <block name="product.attribute.value" template="Amida_OneClickOrder::Catalog/Product/View/buy.phtml" after="product.info.price">
                <arguments>
                    <argument name="view_buy" xsi:type="object">Amida\OneClickOrder\ViewModel\Catalog\Product\Buy</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
